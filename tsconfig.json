{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "lib": ["es2017"],
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "typings/*"],
            "models/*": ["src/models/*"],
            "custom-module-type": ["./typings/index"]
        },
        "typeRoots": ["node_modules/@types", "./typings"]
    },
    "include": ["src/**/*", "test/**/*", "typings/**/*"]
}
